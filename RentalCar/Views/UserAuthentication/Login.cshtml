@model RentalCar.Models.DTO.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - RentalCar</title>
    <!-- Add Bootstrap CSS for better styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Ensure the body covers the full viewport */
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            background: rgba(255, 231, 224, 0.9);
            background-size: cover; /* Cover the entire page */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Prevent repeating */
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-container {
            background: rgba(249, 242, 241, 0.9); /* Semi-transparent white background */
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        .login-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .form-control {
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 1rem;
        }

        .btn-primary {
            background-color: #e45831;
            border: none;
            padding: 10px;
            border-radius: 5px;
            width: 100%;
            font-size: 16px;
            color: white;
        }

        .btn-primary:hover {
            background-color: #f77336;
        }

        .text-danger {
            font-size: 14px;
            margin-top: -10px;
            margin-bottom: 10px;
        }

        .signup-link {
            text-align: center;
            margin-top: 1rem;
            display: block;
            color: #f77336;
            text-decoration: none;
        }

        .signup-link:hover {
            text-decoration: underline;
        }

        .alert {
            margin-bottom: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <!-- Username Field -->
            <div class="mb-3">
                <label asp-for="Username" class="form-label"><b>Username</b></label>
                <input type="text" asp-for="Username" class="form-control" placeholder="Enter Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label"><b>Password</b></label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Display TempData message if any -->
            @if (TempData["msg"] != null)
            {
                <div class="alert alert-warning">@TempData["msg"]</div>
            }

            <!-- Login Button -->
            <button type="submit" class="btn btn-primary">Login</button>

            <!-- Signup Link -->
            <a class="signup-link" href="/UserAuthentication/Registration">Not signed up? Sign up here</a>
        </form>
    </div>

    <!-- Add Bootstrap JS for better interactivity -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>