@model Car


<!-- Header Start -->
<div class="container-fluid bg-breadcrumb">
    <div class="container text-center py-5" style="max-width: 900px;">
        <h4 class="text-white display-4 mb-4 wow fadeInDown" data-wow-delay="0.1s">- Modify a Car -</h4>
    </div>
</div>
<!-- Header End -->

<br>
<form method="post">
    <input asp-for="CarID" hidden />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="border p-4 mt-4 shadow-sm rounded">
                    <!-- Added shadow and rounded corners -->
                    <div class="text-center mb-4">
                        <h2 class="text-primary">Modify a car</h2>
                        <hr class="w-50 mx-auto" /> <!-- Centered and reduced width of the hr -->
                    </div>

                    <!-- Marque Field -->
                    <div class="mb-3">
                        <label asp-for="Marque" class="form-label"></label>
                        <input asp-for="Marque" class="form-control" placeholder="Enter car make" />
                        <span asp-validation-for="Marque" class="text-danger"></span>
                    </div>

                    <!-- Model Field -->
                    <div class="mb-3">
                        <label asp-for="Model" class="form-label"></label>
                        <input asp-for="Model" class="form-control" placeholder="Enter car model" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <!-- Color Field -->
                    <div class="mb-3">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" placeholder="Enter car color" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <!-- ImageURL Field -->
                    <div class="mb-3">
                        <label asp-for="ImageURL" class="form-label"></label>
                        <input asp-for="ImageURL" class="form-control" placeholder="Enter image URL" />
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>

                    <!-- Price Field -->
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" placeholder="Enter car price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-primary me-md-2">Modify</button>
                        <a asp-controller="Car" asp-action="Index" class="btn btn-outline-secondary">Retour à la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
