@model RentalCar.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
    Layout = "~/Views/Shared/_ProfileLayout.cshtml"; // Extend the main layout
}


<div class="content">
    <div class="container mt-6">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow">
                    <div class="card-header bg-danger text-white text-center">
                        <h3>Delete Booking</h3>
                    </div>
                    <div class="card-body">
                        <p>Are you sure you want to delete this booking?</p>
                        <dl class="row">
                            <dt class="col-sm-4">Booking ID</dt>
                            <dd class="col-sm-8">@Model.BookingID</dd>
                            <dt class="col-sm-4">User</dt>
                            <dd class="col-sm-8">@Model.UserName</dd>
                            <dt class="col-sm-4">Car Image</dt>
                            <dd class="col-sm-8"><img src="@Model.CarImage" alt="Car Image" style="width: 100px; height: auto;" /></dd>
                            <dt class="col-sm-4">Booking Start Date</dt>
                            <dd class="col-sm-8">@Model.StartDate.ToShortDateString()</dd>
                            <dt class="col-sm-4">Booking End Date</dt>
                            <dd class="col-sm-8">@Model.EndDate.ToShortDateString()</dd>
                            <dt class="col-sm-4">Total Price</dt>
                            <dd class="col-sm-8">@Model.TotalPrice.ToString("C")</dd>
                        </dl>
                        <form asp-controller="Profile" asp-action="DeleteBooking" asp-route-id="@Model.BookingID" method="post">
                            <input type="hidden" asp-for="BookingID" />
                            <div class="form-group text-center">
                                <button type="submit"  class="btn btn-danger">Delete</button>
                                <a asp-action="MyBookedCars" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
