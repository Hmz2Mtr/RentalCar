@model RentalCar.Models.ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml"; // Extend the main layout
}

<!-- Main Content -->
<div class="content">
    <h2>Edit Profile</h2>
    <hr />

    <!-- Display success message if any -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <!-- Edit Profile Form -->
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Username" />

        <div class="profile-details">
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9 bg-light p-2 rounded">@Model.Username</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">
                    <input asp-for="Email" class="form-control bg-light p-2 rounded" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">
                    <input asp-for="FirstName" class="form-control bg-light p-2 rounded" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">
                    <input asp-for="LastName" class="form-control bg-light p-2 rounded" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </dd>

                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9">
                    <input asp-for="PhoneNumber" class="form-control bg-light p-2 rounded" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </dd>
            </dl>
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>