@model RentalCar.Models.ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<!-- Add Bootstrap CSS for better styling
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> -->
<style>
    /* Custom styles for the profile page */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-container {
        display: flex;
        margin: 40px auto;
        max-width: 1200px;
        padding: 20px;
    }

    .sidebar {
        width: 300px;
        background-color: #343a40;
        color: white;
        padding: 30px;
        border-radius: 10px;
        margin-right: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .sidebar img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            display: block;
            margin: 0 auto 30px auto;
            border: 3px solid #fff;
        }

        .sidebar .btn {
            width: 100%;
            margin-bottom: 15px;
            text-align: left;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar .btn-secondary {
            background-color: #495057;
            border: none;
        }

            .sidebar .btn-secondary:hover {
                background-color: #6c757d;
            }

    .content {
        flex: 1;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .content h2 {
            margin-bottom: 25px;
            color: #343a40;
            font-weight: 600;
        }

        .content hr {
            border-top: 2px solid #eee;
            margin-bottom: 25px;
        }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            font-weight: 600;
            color: #495057;
        }

    .form-control {
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        font-size: 14px;
        color: #dc3545;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
    }
</style>

<div class="profile-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Profile Image -->
        <img src="~/img/DefaultProfile.png" alt="Profile Image" class="profile-image">

        <!-- General Information Button -->
        <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">General Informations</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h2>Edit Profile</h2>
        <hr />

        <!-- Display success message if any -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        <!-- Edit Profile Form -->
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Username" />

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

<!-- Add Bootstrap JS for better interactivity -->
<script src="~/js/main.js"></script>