@model RentalCar.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

@{
    Layout = "~/Views/Shared/_ProfileLayout.cshtml"; // Extend the main layout
}



<!-- Main Content -->
<div class="content">
    <h2>My Profile</h2>
    <hr />

    <!-- Display success message if any -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <div class="profile-details">
        <dl class="row">
            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9 bg-light p-3 rounded">@Model.Username</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9 bg-light p-3 rounded">@Model.Email</dd>

            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9 bg-light p-3 rounded">@Model.FirstName</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9 bg-light p-3 rounded">@Model.LastName</dd>

            <dt class="col-sm-3">Phone Number</dt>
            <dd class="col-sm-9 bg-light p-3 rounded">@Model.PhoneNumber</dd>
        </dl>
    </div>
    <!-- Edit Profile Button -->
    <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>



</div>

