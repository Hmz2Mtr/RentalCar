@model RentalCar.Models.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<!-- Add Bootstrap CSS for better styling 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">-->
<style>
    /* Custom styles for the profile page */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-container {
        display: flex;
        margin: 40px auto;
        max-width: 1200px;
        padding: 20px;
    }

    .sidebar {
        width: 300px;
        background-color: #343a40;
        color: white;
        padding: 30px;
        border-radius: 10px;
        margin-right: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .sidebar img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            display: block;
            margin: 0 auto 30px auto;
            border: 3px solid #fff;
        }

        .sidebar .btn {
            width: 100%;
            margin-bottom: 15px;
            text-align: left;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar .btn-secondary {
            background-color: #495057;
            border: none;
        }

            .sidebar .btn-secondary:hover {
                background-color: #6c757d;
            }

    .content {
        flex: 1;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .content h2 {
            margin-bottom: 25px;
            color: #343a40;
            font-weight: 600;
        }

        .content hr {
            border-top: 2px solid #eee;
            margin-bottom: 25px;
        }

    .profile-details {
        margin-bottom: 30px;
    }

        .profile-details dt {
            font-weight: 600;
            color: #495057;
            margin-bottom: 10px;
        }

        .profile-details dd {
            margin-bottom: 20px;
            color: #6c757d;
        }

    

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
    }
</style>

<div class="profile-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Profile Image -->
        <img src="~/img/DefaultProfile.png" alt="Profile Image" class="profile-image">

        <!-- General Information Button -->
        <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">General Informations</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <h2>My Profile</h2>
        <hr />

        <!-- Display success message if any -->
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-success">@TempData["Message"]</div>
        }

        <!-- Profile Details -->
        <div class="profile-details">
            <dl class="row">
                <dt class="col-sm-3">Username</dt>
                <dd class="col-sm-9 bg-light p-3 rounded">@Model.Username</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9 bg-light p-3 rounded">@Model.Email</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9 bg-light p-3 rounded">@Model.FirstName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9 bg-light p-3 rounded">@Model.LastName</dd>

                <dt class="col-sm-3">Phone Number</dt>
                <dd class="col-sm-9 bg-light p-3 rounded">@Model.PhoneNumber</dd>
            </dl>
        </div>

        <!-- Edit Profile Button -->
        <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
    </div>
</div>

<!-- Add Bootstrap JS for better interactivity -->
<script src="~/js/main.js"></script>
