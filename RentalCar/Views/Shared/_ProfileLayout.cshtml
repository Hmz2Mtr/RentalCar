@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Extend the main layout
}
@* @model RentalCar.Models.ProfileViewModel *@
<!-- Add Bootstrap CSS for better styling
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">-->
<style>
    /* Custom styles for the profile page */
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile-container {
        display: flex;
        margin: 40px auto;
        max-width: 1200px;
        padding: 20px;
    }

    .sidebar {
        width: 300px;
        background-color: #343a40;
        color: white;
        padding: 30px;
        border-radius: 10px;
        margin-right: 30px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .sidebar img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            display: block;
            margin: 0 auto 30px auto;
            border: 3px solid #fff;
        }

        .sidebar .btn {
            width: 100%;
            margin-bottom: 15px;
            text-align: left;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .sidebar .btn-secondary {
            background-color: #495057;
            border: none;
        }

            .sidebar .btn-secondary:hover {
                background-color: #6c757d;
            }

    .content {
        flex: 1;
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .content h2 {
            margin-bottom: 25px;
            color: #343a40;
            font-weight: 600;
        }

        .content hr {
            border-top: 2px solid #eee;
            margin-bottom: 25px;
        }

    .profile-details {
        margin-bottom: 30px;
    }

        .profile-details dt {
            font-weight: 600;
            color: #495057;
            margin-bottom: 10px;
        }

        .profile-details dd {
            margin-bottom: 20px;
            color: #6c757d;
        }



    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-color: #c3e6cb;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 25px;
    }
</style>

<div class="profile-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Profile Image -->
        <div class="text-center mb-4">
            <img src="~/img/DefaultProfile.png" alt="Profile Image" class="profile-image rounded-circle shadow-sm" style="width: 120px; height: 120px; border: 3px solid #fff;">
        </div>

        <!-- Username -->
        @* <h4 class="text-center mb-4 text-white">@Model.Username</h4> *@

        <!-- General Information Button -->
        <a asp-controller="Profile" asp-action="Index" class="btn btn-secondary">General Informations</a>
        <a asp-controller="UserAuthentication" asp-action="ChangePassword" class="btn btn-secondary">Change your Password</a>
    </div>

    <!-- Main Content -->
    @RenderBody()
</div>

<!-- Add Bootstrap JS for better interactivity -->
<script src="~/js/main.js"></script>

























