@model RentalCar.Models.Booking

@{
    ViewData["Title"] = "Delete Booking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Delete Booking</h3>
                </div>
                <div class="card-body">
                    <p>Are you sure you want to delete this booking?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Booking ID</dt>
                        <dd class="col-sm-8">@Model.BookingID</dd>
                        <dt class="col-sm-4">User</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>
                        <dt class="col-sm-4">Car</dt>
                        @* <dd class="col-sm-8">@Model.Car.Marque @Model.Car.Model</dd> *@
                        <dt class="col-sm-4">Car Image</dt>
                        <dd class="col-sm-8"><img src="@Model.CarImage" alt="Car Image" style="width: 100px; height: auto;" /></dd>
                        <dt class="col-sm-4">Booking Date</dt>
                        <dd class="col-sm-8">@Model.BookingDate.ToShortDateString()</dd>
                        <dt class="col-sm-4">Total Price</dt>
                        <dd class="col-sm-8">@Model.TotalPrice.ToString("C")</dd>
                    </dl>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="BookingID" />
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>