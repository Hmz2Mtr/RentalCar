@model IEnumerable<RentalCar.Models.Booking>

@{
    ViewData["Title"] = "Bookings";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container mt-5">
    <h2 class="text-center mb-4">Bookings</h2>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>User</th>
                <th>Car</th>
                <th>Car Image</th>
                <th>Booking Date</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingID</td>
                    <td>@booking.UserName</td>
                    @* <td>@booking.Car.Marque @booking.Car.Model</td> *@
                    <td><img src="@booking.CarImage" alt="Car Image" style="width: 100px; height: auto;" /></td>
                    <td>@booking.BookingDate.ToShortDateString()</td>
                    <td>@booking.TotalPrice.ToString("C")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@booking.BookingID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>